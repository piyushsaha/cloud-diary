<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/navbar-loggedout') %>


    <div class="body-container">
        <div class="card">
            <div class="img-container">
                <img src="/assets/user-icon.svg" alt="" class="user-icon">
                <h2>Login</h2>
            </div>
            <% if(messages.error) { %>
                <%= messages.name %>
                <p class="error-msg"> <%= messages.error %> </p>
            <% } %>
            <form action="/login" method="post">
                <label for="username">Username</label>
                <br />
                <input type="text" name="username" id="username" placeholder="Username" required />
                <br />
                <label for="password">Password</label>
                <br />
                <input type="password" name="password" id="password" placeholder="Password" required />
                <br />
                <button type="submit">Login</button>
            </form>

            <p class="not-user">Not an existing user?
                <span class="register-redirect" onclick="window.location.href='/register'">Register</span>
            </p>
        </div>
    </div>

</body>
</html>