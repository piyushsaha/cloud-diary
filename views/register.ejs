<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/navbar-loggedout') %> 

    <div class="body-container">
        <div class="card">
            <div class="img-container">
                <img src="/assets/user-icon.svg" alt="" class="user-icon">
                <h2>Register</h2>
            </div>
            <% if(messages.error) { %>
                <p class="warn-msg"> <%= messages.error %> </p>
            <% } %>
            <form action="/register" method="post">
                <label for="name">Name</label>
                <br />
                <input type="text" name="name" id="name" placeholder="Enter your name" value="<%= messages.name ? messages.name : "" %>" required />
                <br />
                <label for="username">Username</label>
                <br />
                <input type="text" name="username" id="username" placeholder="Choose a username" required />
                <br />

                <label for="password">Password</label>
                <br />
                <input type="password" name="password" id="password" placeholder="Choose a password" required />
                <button type="submit">Register</button>
            </form>
        </div>
    </div>
</body>

</html>